<tr {{eleAttrs}} {{data 'item'}} class="item">
    {{#columns}}
        {{^if isHidden}}
            <td class="{{key}}">
                {{#if itemValue}}
                    <div class="grid-item-value">
                        {{#is key 'url'}}
                            {{#if urlAspenLink}}
                                <a href="{{urlAspenLink}}" target="aspen-url">
                                    {{itemValue}}
                                </a>
                            {{else}}
                                {{itemValue}}
                            {{/if}}
                        {{else}}
                            {{itemValue}}
                        {{/is}}
                    </div>

                    {{#is key 'description'}}
                        {{#if descriptionKeyPath}}
                            <span class="keypath label label-alt label-default">
                                <span class="icon-key"></span>

                                <a href="{{descriptionUrl}}">
                                    {{descriptionKeyPath}}
                                </a>
                            </span>
                        {{/if}}
                    {{/is}}

                    {{#is key 'pageTitle'}}
                        {{#if pageTitleKeyPath}}
                            <span class="keypath label label-alt label-default">
                                <span class="icon-key"></span>

                                <a href="{{pageTitleUrl}}">
                                    {{pageTitleKeyPath}}
                                </a>
                            </span>
                        {{/if}}
                    {{/is}}
                {{/if}}
            </td>
        {{/if}}
    {{/columns}}
</tr>
